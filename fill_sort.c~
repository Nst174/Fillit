#include "fillit.h"

t_fill *sort_lists(t_fill *ed_lists, char let)
{
	int i;
	t_fill *p;
	t_fill *r;
	t_fill *s;
	t_fill *t;

	write(1, "S\n", 2);
	p = ed_lists;
	i = 0;
	while (p->letter != let)
	{
		write(1, "1", 1);
		p = p->next;
		i++;
	}
	p = ed_lists;
	while ((i - 1) > 0)
	{
		write(1, "2", 1);
		p = p->next;//B
	}
	r = ed_lists;
	while (r->letter != p->letter + 1)
	{
		write(1, "3", 1);
		r = r->next;//C
	}
	write(1, "4", 1);
	s = p;
	write(1, "5", 1);
	s->next = NULL;//только B
	write(1, "6", 1);
	p = r;
	write(1, "7", 1);
	t = r->next;
	write(1, "8", 1);
	p->next = s;
	write(1, "9", 1);
	s->next = t;
	write(1, "F\n", 2);
	return (ed_lists);
}
